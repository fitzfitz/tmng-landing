---
import { Container, Typography } from "@/components/ui";
---

<footer class="relative pt-32 pb-16 overflow-hidden">
  <div class="absolute inset-0 z-0 pointer-events-none">
     {/* Footer Glow */}
     <div class="absolute bottom-0 left-1/2 -translate-x-1/2 w-full h-[500px] bg-linear-to-t from-fuchsia-900/20 to-transparent opacity-50 blur-[100px]"></div>
  </div>

  <Container className="relative z-10">
    <div class="glass-card-strong rounded-3xl p-12 md:p-16 mb-8 relative overflow-hidden">
        {/* Giant Watermark */}
        <div class="absolute -bottom-20 -right-20 text-[20rem] font-bold text-white/2 pointer-events-none select-none leading-none">
            monograf
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-12 gap-12 lg:gap-8">
            {/* Brand Column */}
            <div class="lg:col-span-5 flex flex-col items-start mr-8">
                <a href="/" class="flex items-center gap-3 mb-8 group pl-2">
                    <div class="relative w-8 h-8">
                        <span class="absolute inset-0 rounded-full bg-fuchsia-500 animate-ping opacity-75"></span>
                        <span class="relative inline-flex rounded-full h-8 w-8 bg-fuchsia-600 border border-white/20 items-center justify-center text-white text-xs font-bold">T</span>
                    </div>
                    <span class="text-3xl font-bold tracking-tight text-white group-hover:text-fuchsia-300 transition-colors">
                      monograf.
                    </span>
                 </a>
                <Typography variant="body" className="text-purple-200/80 mb-8 max-w-sm leading-relaxed">
                Forging the digital future with precision engineering and aesthetic mastery. We build platforms that define industries.
                </Typography>
                <div class="flex gap-4">
                {/* Social Placeholders */}
                {['Twitter', 'GitHub', 'LinkedIn'].map(social => (
                    <a href="#" class="w-12 h-12 rounded-full bg-white/5 border border-white/10 flex items-center justify-center text-purple-300 hover:text-white hover:border-fuchsia-500/50 hover:bg-fuchsia-500/10 transition-all duration-300 hover:scale-110">
                    <span class="sr-only">{social}</span>
                    {social === 'Twitter' && <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zl-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>}
                    {social === 'GitHub' && <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>}
                    {social === 'LinkedIn' && <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/></svg>}
                    </a>
                ))}
                </div>
            </div>

            {/* Links Columns */}
            <div class="lg:col-span-2">
                <h4 class="font-bold mb-8 uppercase tracking-widest text-sm bg-clip-text text-transparent bg-linear-to-r from-fuchsia-400 to-purple-400">Company</h4>
                <ul class="space-y-4">
                {['About Us', 'Careers', 'Blog', 'Contact'].map(link => (
                    <li><a href="#" class="text-purple-200/60 hover:text-white hover:translate-x-1 transition-all duration-300 block text-sm font-medium">{link}</a></li>
                ))}
                </ul>
            </div>

            <div class="lg:col-span-2">
                <h4 class="font-bold mb-8 uppercase tracking-widest text-sm bg-clip-text text-transparent bg-linear-to-r from-fuchsia-400 to-purple-400">Services</h4>
                <ul class="space-y-4">
                {['Web Development', 'UI/UX Design', 'System Architecture', 'API Development'].map(link => (
                    <li><a href="#" class="text-purple-200/60 hover:text-white hover:translate-x-1 transition-all duration-300 block text-sm font-medium">{link}</a></li>
                ))}
                </ul>
            </div>

            {/* Newsletter */}
            <div class="lg:col-span-3">
                <h4 class="font-bold mb-8 uppercase tracking-widest text-sm bg-clip-text text-transparent bg-linear-to-r from-fuchsia-400 to-purple-400">Stay Synced</h4>
                <p class="text-purple-200/60 text-sm mb-6 leading-relaxed">
                Join our transmission frequency. No noise, just signal.
                </p>
                <form class="flex flex-col gap-3">
                <input 
                    type="email" 
                    placeholder="Enter your email" 
                    class="bg-white/5 border border-white/10 rounded-xl px-4 py-3 text-white text-sm focus:outline-none focus:border-fuchsia-500/50 focus:bg-white/10 w-full transition-all duration-300 backdrop-blur-md"
                />
                <button class="bg-linear-to-r from-fuchsia-600 to-purple-600 text-white px-5 py-3 rounded-xl font-bold text-sm hover:shadow-[0_0_20px_-5px_rgba(236,72,153,0.5)] transition-all duration-300 border border-white/10">
                    Subscribe
                </button>
                </form>
            </div>
        </div>
    </div>
    
    <div class="flex flex-col md:flex-row justify-between items-center gap-4 px-8">
      <div class="text-xs text-purple-300/40 font-mono">
        &copy; {new Date().getFullYear()} TMNG SYSTEMS. All rights reserved.
      </div>
      <div class="flex gap-8 text-xs text-purple-300/40 font-mono">
        <a href="#" class="hover:text-fuchsia-400 transition-colors">PRIVACY_PROTOCOL</a>
        <a href="#" class="hover:text-fuchsia-400 transition-colors">TERMS_OF_SERVICE</a>
      </div>
    </div>

  </Container>
</footer>
