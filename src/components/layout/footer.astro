---
import { Container, Typography } from "@/components/ui";
---

<footer class="relative pt-20 pb-8 bg-white border-t border-gray-200">
  <Container>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 mb-12">
      {/* Brand Column */}
      <div class="lg:col-span-1">
        <a href="/" class="flex items-center gap-2 mb-6">
          <div class="w-8 h-8 rounded-lg bg-purple-600 flex items-center justify-center">
            <span class="text-white font-bold text-sm">TM</span>
          </div>
          <span class="text-xl font-bold text-gray-900">
            monograf
          </span>
        </a>
        <Typography variant="body-sm" className="text-gray-600 mb-6 max-w-sm">
          Transforming businesses through innovative digital solutions and strategic technology partnerships.
        </Typography>
        <div class="flex gap-3">
          {['Twitter', 'GitHub', 'LinkedIn'].map(social => (
            <a href="#" class="w-10 h-10 rounded-lg bg-gray-100 flex items-center justify-center text-gray-600 hover:text-purple-600 hover:bg-purple-100 transition-all duration-300">
              <span class="sr-only">{social}</span>
              {social === 'Twitter' && <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>}
              {social === 'GitHub' && <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>}
              {social === 'LinkedIn' && <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/></svg>}
            </a>
          ))}
        </div>
      </div>

      {/* Links Columns */}
      <div>
        <h4 class="font-bold mb-6 text-gray-900">Solutions</h4>
        <ul class="space-y-3">
          {['UI/UX Design', 'Custom Development', 'Digital Transformation', 'Consulting'].map(link => (
            <li><a href="#services" class="text-gray-600 hover:text-purple-600 transition-colors text-sm">{link}</a></li>
          ))}
        </ul>
        </ul>
      </div>

      <div>
        <h4 class="font-bold mb-6 text-gray-900">Company</h4>
        <ul class="space-y-3">
          {['About Us', 'Careers', 'Blog', 'Contact'].map(link => (
            <li><a href="#" class="text-gray-600 hover:text-purple-600 transition-colors text-sm">{link}</a></li>
          ))}
        </ul>
      </div>

      {/* Newsletter */}
      <div>
        <h4 class="font-bold mb-6 text-gray-900">Stay Updated</h4>
        <p class="text-gray-600 text-sm mb-4">
          Subscribe to our newsletter for updates.
        </p>
        <form class="flex flex-col gap-2">
          <input 
            type="email" 
            placeholder="Enter your email" 
            class="bg-white border border-gray-200 rounded-lg px-4 py-2 text-gray-900 text-sm focus:outline-none focus:border-purple-500 focus:ring-1 focus:ring-purple-500 transition-all"
          />
          <button class="bg-purple-600 text-white px-5 py-2 rounded-lg font-medium text-sm hover:bg-purple-700 transition-all">
            Subscribe
          </button>
        </form>
      </div>
    </div>
    
    <div class="flex flex-col md:flex-row justify-between items-center gap-4 pt-8 border-t border-gray-200">
      <div class="text-sm text-gray-600">
        &copy; {new Date().getFullYear()} monograf. All rights reserved.
      </div>
      <div class="flex gap-6 text-sm text-gray-600">
        <a href="/privacy" class="hover:text-purple-600 transition-colors">Privacy Policy</a>
        <a href="/terms" class="hover:text-purple-600 transition-colors">Terms of Service</a>
      </div>
    </div>
  </Container>
</footer>
