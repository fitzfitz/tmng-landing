---
import { Container, Typography, Button } from "@/components/ui";

const projects = [
  {
    title: "Financial Foresight",
    category: "Fintech",
    description: "Real-time analytics dashboard processing millions of transactions per second with sub-millisecond latency.",
    image: "/images/projects/fintech.png",
    size: "large",
    accent: "bg-emerald-500"
  },
  {
    title: "EcoSpace Orbital",
    category: "Aerospace",
    description: "Mission control interfaces for next-gen satellite constellations.",
    image: "/images/projects/aerospace.png",
    size: "tall",
    accent: "bg-blue-500"
  },
  {
    title: "Quantum Nexus",
    category: "AI Research",
    description: "Visualizing high-dimensional vector spaces for machine learning models.",
    image: "/images/projects/ai-nexus.png",
    size: "wide",
    accent: "bg-purple-500"
  }
];
---

<section class="py-32 relative">
  <Container>
    <div class="flex flex-col md:flex-row justify-between items-end mb-16 gap-6">
        <div>
            <Typography variant="h2" className="text-white mb-4">Selected Works</Typography>
            <Typography variant="body" className="text-purple-300 max-w-xl">
                Engineering excellence meets aesthetic precision. Here are a few projects where we pushed the boundaries.
            </Typography>
        </div>
        <Button as="a" href="/work" variant="outline" className="hidden md:flex">View All Projects</Button>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 auto-rows-[400px]">
        {/* Project 1 - Large (Spans 2 cols) */}
        <div class="group relative md:col-span-2 rounded-3xl overflow-hidden glass-card cursor-pointer border border-white/10 hover:border-white/20 transition-colors duration-500">
            <div class="absolute inset-0 bg-obsidian-950/20 z-10 transition-colors duration-500 group-hover:bg-transparent"></div>
            <img src={projects[0].image} alt={projects[0].title} class="w-full h-full object-cover grayscale group-hover:grayscale-0 scale-100 group-hover:scale-105 transition-all duration-700 ease-in-out" />
            
            {/* Overlay Gradient */}
            <div class="absolute inset-0 bg-linear-to-t from-obsidian-950/90 via-obsidian-950/40 to-transparent z-20"></div>

            <div class="absolute bottom-0 left-0 p-10 z-30 w-full transform translate-y-2 group-hover:translate-y-0 transition-transform duration-500">
                <div class="flex items-center justify-between mb-4">
                     <div class="px-3 py-1 rounded-full text-xs font-bold text-emerald-300 bg-emerald-500/10 border border-emerald-500/20 backdrop-blur-md">
                        {projects[0].category}
                    </div>
                    <div class="w-10 h-10 rounded-full bg-white/10 flex items-center justify-center opacity-0 group-hover:opacity-100 transform -translate-x-4 group-hover:translate-x-0 transition-all duration-300">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-white"><path d="M7 17L17 7M17 7H7M17 7V17"/></svg>
                    </div>
                </div>
                
                <h3 class="text-4xl font-bold text-white mb-3 group-hover:text-emerald-200 transition-colors">{projects[0].title}</h3>
                <p class="text-purple-200/80 text-lg opacity-0 group-hover:opacity-100 transition-opacity duration-500 max-w-lg transform translate-y-2 group-hover:translate-y-0 delay-75">
                    {projects[0].description}
                </p>
            </div>
        </div>

         {/* Project 2 - Tall (Spans 1 col) */}
         <div class="group relative md:col-span-1 md:row-span-2 rounded-3xl overflow-hidden glass-card cursor-pointer border border-white/10 hover:border-white/20 transition-colors duration-500">
             <div class="absolute inset-0 bg-obsidian-950/20 z-10 transition-colors duration-500 group-hover:bg-transparent"></div>
             <img src={projects[1].image} alt={projects[1].title} class="w-full h-full object-cover grayscale group-hover:grayscale-0 scale-100 group-hover:scale-105 transition-all duration-700 ease-in-out" />
            
            <div class="absolute inset-0 bg-linear-to-t from-obsidian-950/90 via-obsidian-950/40 to-transparent z-20"></div>

            <div class="absolute bottom-0 left-0 p-10 z-30 w-full transform translate-y-2 group-hover:translate-y-0 transition-transform duration-500">
                <div class="flex items-center justify-between mb-4">
                    <div class="px-3 py-1 rounded-full text-xs font-bold text-blue-300 bg-blue-500/10 border border-blue-500/20 backdrop-blur-md">
                        {projects[1].category}
                    </div>
                     <div class="w-10 h-10 rounded-full bg-white/10 flex items-center justify-center opacity-0 group-hover:opacity-100 transform -translate-x-4 group-hover:translate-x-0 transition-all duration-300">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-white"><path d="M7 17L17 7M17 7H7M17 7V17"/></svg>
                    </div>
                </div>
                <h3 class="text-3xl font-bold text-white mb-3 group-hover:text-blue-200 transition-colors">{projects[1].title}</h3>
                <p class="text-purple-200/80 leading-relaxed opacity-0 group-hover:opacity-100 transition-opacity duration-500 delay-75">
                    {projects[1].description}
                </p>
            </div>
        </div>

        {/* Project 3 - Wide (Bottom left, spans 2 cols) */}
        <div class="group relative md:col-span-2 rounded-3xl overflow-hidden glass-card cursor-pointer border border-white/10 hover:border-white/20 transition-colors duration-500">
            <div class="absolute inset-0 bg-obsidian-950/20 z-10 transition-colors duration-500 group-hover:bg-transparent"></div>
            <img src={projects[2].image} alt={projects[2].title} class="w-full h-full object-cover grayscale group-hover:grayscale-0 scale-100 group-hover:scale-105 transition-all duration-700 ease-in-out" />
            
            <div class="absolute inset-0 bg-linear-to-t from-obsidian-950/90 via-obsidian-950/40 to-transparent z-20"></div>

            <div class="absolute bottom-0 left-0 p-10 z-30 w-full transform translate-y-2 group-hover:translate-y-0 transition-transform duration-500">
                <div class="flex items-center justify-between mb-4">
                    <div class="px-3 py-1 rounded-full text-xs font-bold text-fuchsia-300 bg-fuchsia-500/10 border border-fuchsia-500/20 backdrop-blur-md">
                        {projects[2].category}
                    </div>
                     <div class="w-10 h-10 rounded-full bg-white/10 flex items-center justify-center opacity-0 group-hover:opacity-100 transform -translate-x-4 group-hover:translate-x-0 transition-all duration-300">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-white"><path d="M7 17L17 7M17 7H7M17 7V17"/></svg>
                    </div>
                </div>
                <h3 class="text-3xl font-bold text-white mb-3 group-hover:text-fuchsia-200 transition-colors">{projects[2].title}</h3>
                <p class="text-purple-200/80 text-lg opacity-0 group-hover:opacity-100 transition-opacity duration-500 max-w-lg delay-75">
                    {projects[2].description}
                </p>
            </div>
        </div>
    </div>
    
    <div class="mt-8 md:hidden flex justify-center">
        <Button as="a" href="/work" variant="outline" className="w-full">View All Projects</Button>
    </div>
  </Container>
</section>
