---
import { Container, Typography } from "@/components/ui";

const partners = [
  { name: "Acme Corp", icon: "◈" },
  { name: "Global Tech", icon: "▲" },
  { name: "Nebula Systems", icon: "◉" },
  { name: "Vertex Logic", icon: "⚡" },
  { name: "Orbital AI", icon: "◎" },
  { name: "Fusion Labs", icon: "★" },
  { name: "Quantum Net", icon: "⬡" },
  { name: "Cyber Dyne", icon: "⌘" },
];
---

<section class="py-20 border-b border-white/10 relative overflow-hidden">
  <Container>
    <div class="text-center mb-12">
      <Typography variant="caption" className="text-purple-300 tracking-[0.2em]">Trusted by Industry Leaders</Typography>
    </div>
    
    <div class="relative w-full overflow-hidden mask-linear-fade">
        <div class="flex items-center gap-16 animate-marquee whitespace-nowrap">
            {[...partners, ...partners, ...partners].map((partner, i) => (
                <div class="flex items-center gap-3 group opacity-40 hover:opacity-100 transition-opacity duration-300 cursor-default">
                    <span class="text-3xl text-white">{partner.icon}</span>
                    <span class="text-xl font-semibold text-purple-300 group-hover:text-white transition-colors">{partner.name}</span>
                </div>
            ))}
        </div>
    </div>
  </Container>
  
  <style>
    .mask-linear-fade {
        mask-image: linear-gradient(to right, transparent, black 20%, black 80%, transparent);
    }
    
    @keyframes marquee {
        0% { transform: translateX(0); }
        100% { transform: translateX(-33.33%); }
    }
    
    .animate-marquee {
        animation: marquee 30s linear infinite;
    }
    
    .animate-marquee:hover {
        animation-play-state: paused;
    }
  </style>
</section>
