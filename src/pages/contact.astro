---
import BaseLayout from "@/layouts/base-layout.astro";
import { Container, Typography } from "@/components/ui";
import ContactForm from "@/features/contact/contact-form.tsx";
---

<BaseLayout title="Contact Us | TMNG">
  <section class="py-20">
    <Container>
      <div class="max-w-2xl mx-auto">
        <div class="text-center mb-12">
          <Typography variant="h1" className="mb-6 text-white">Let's Work Together</Typography>
          <Typography variant="lead">
            Have a project in mind? Fill out the form below and our team will get back to you shortly.
          </Typography>
        </div>
        
        <div class="glass-card-strong p-6 md:p-10 rounded-3xl">
          <ContactForm client:visible />
        </div>
      </div>
    </Container>
  </section>
</BaseLayout>
