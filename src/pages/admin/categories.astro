---
import AdminLayout from "@/features/admin/admin-layout";
import CategoriesManager from "@/features/admin/categories-manager";

// Check session
// Check session
const user = Astro.locals.user;
if (!user) {
  return Astro.redirect("/admin/login");
}
---

<AdminLayout user={user} currentPath="/admin/categories" client:load>
  <div class="space-y-6 p-6">
    <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4">
      <div>
        <h1 class="text-3xl font-bold text-white mb-2">Categories</h1>
        <p class="text-purple-200/50">Organize your posts with categories.</p>
      </div>
    </div>

    <CategoriesManager client:load />
  </div>
</AdminLayout>
