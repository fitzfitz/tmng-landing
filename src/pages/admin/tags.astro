---
import AdminLayout from "../../features/admin/admin-layout";
import TagsManager from "../../features/admin/tags-manager";

const user = Astro.locals.user;

if (!user) {
  return Astro.redirect("/admin/login");
}
---

<AdminLayout user={user as any} currentPath="/admin/tags" client:load>
  <div class="space-y-6 p-6">
    <div>
      <h1 class="text-3xl font-bold bg-clip-text text-transparent bg-linear-to-r from-white to-purple-200">
        Tags
      </h1>
      <p class="text-purple-200/70 mt-2">
        Manage tags to organize your content.
      </p>
    </div>

    <TagsManager client:load />
  </div>
</AdminLayout>
