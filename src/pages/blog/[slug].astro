---
import BaseLayout from "@/layouts/base-layout.astro";
import { Container, Typography } from "@/components/ui";
import { marked } from "marked";

// Get the slug from the URL
const { slug } = Astro.params;

if (!slug) {
  return Astro.redirect("/blog");
}

// Fetch post data from API
const baseUrl = import.meta.env.DEV ? "http://localhost:4321" : "https://tmng.my.id";
const response = await fetch(`${baseUrl}/api/posts/${slug}`);

if (!response.ok) {
  return Astro.redirect("/blog");
}

const { data: post } = await response.json();

if (!post) {
  return Astro.redirect("/blog");
}

// Parse markdown content to HTML
const contentHtml = await marked.parse(post.content || "");

// Track view (fire and forget)
fetch(`${baseUrl}/api/posts/${slug}/views`, {
  method: "POST",
}).catch(() => {/* ignore errors */});

// Format date
function formatDate(dateString: string | null) {
  if (!dateString) return "";
  return new Date(dateString).toLocaleDateString("en-US", {
    weekday: "long",
    month: "long",
    day: "numeric",
    year: "numeric",
  });
}

// SEO
const seoTitle = post.seoTitle || `${post.title} | TMNG Blog`;
const seoDescription = post.seoDescription || post.excerpt || "";
const seoImage = post.seoImage || post.coverImage || "/images/og-default.png";
---

<BaseLayout 
  title={seoTitle} 
  description={seoDescription}
>
  <article class="pt-32 pb-20">
    <Container>
      {/* Header */}
      <header class="max-w-4xl mx-auto mb-12">
        {/* Categories */}
        <div class="flex flex-wrap gap-2 mb-6">
          {post.categories?.map((cat: { name: string; slug: string; color: string }) => (
            <a 
              href={`/blog?category=${cat.slug}`}
              class="px-3 py-1 rounded-full text-xs font-bold uppercase tracking-wider"
              style={`background: ${cat.color}20; color: ${cat.color}`}
            >
              {cat.name}
            </a>
          ))}
        </div>

        {/* Title */}
        <Typography variant="h1" className="text-white mb-6 text-4xl lg:text-5xl leading-tight">
          {post.title}
        </Typography>

        {/* Meta */}
        <div class="flex flex-wrap items-center gap-6 text-purple-200/70">
          {/* Author */}
          <div class="flex items-center gap-3">
            <div class="w-12 h-12 rounded-full bg-white/10 flex items-center justify-center text-white font-bold">
              {post.author?.name?.substring(0, 2).toUpperCase() || "TM"}
            </div>
            <div>
              <div class="text-white font-medium">{post.author?.name || "Team TMNG"}</div>
              <div class="text-sm">{post.author?.role || "Author"}</div>
            </div>
          </div>

          {/* Date */}
          <div class="flex items-center gap-2">
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
            <span>{formatDate(post.publishedAt)}</span>
          </div>

          {/* Read time */}
          <div class="flex items-center gap-2">
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <span>{post.readTimeMinutes || 5} min read</span>
          </div>

          {/* Views */}
          {post.viewCount > 0 && (
            <div class="flex items-center gap-2">
              <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
              </svg>
              <span>{post.viewCount} views</span>
            </div>
          )}
        </div>
      </header>

      {/* Cover Image */}
      {post.coverImage && (
        <div class="max-w-5xl mx-auto mb-12 rounded-3xl overflow-hidden">
          <img 
            src={post.coverImage} 
            alt={post.title}
            class="w-full h-auto object-cover"
          />
        </div>
      )}

      {/* Content */}
      <div class="max-w-3xl mx-auto">
        <div 
          class="article-content"
          set:html={contentHtml}
        />
      </div>

      {/* Author Bio */}
      {post.author && (
        <div class="max-w-3xl mx-auto mt-16 pt-12 border-t border-white/10">
          <div class="glass-card-strong rounded-2xl p-8 flex flex-col md:flex-row gap-6 items-start">
            <div class="w-20 h-20 rounded-full bg-white/10 flex items-center justify-center text-white font-bold text-2xl shrink-0">
              {post.author.name?.substring(0, 2).toUpperCase()}
            </div>
            <div>
              <div class="text-white font-bold text-xl mb-1">{post.author.name}</div>
              <div class="text-fuchsia-400 text-sm mb-3">{post.author.role}</div>
              <p class="text-purple-200/70 leading-relaxed">{post.author.bio}</p>
              
              {/* Social Links */}
              {post.author.socialLinks && (
                <div class="flex gap-3 mt-4">
                  {post.author.socialLinks.twitter && (
                    <a href={post.author.socialLinks.twitter} target="_blank" rel="noopener noreferrer" class="text-purple-200/50 hover:text-fuchsia-400 transition-colors">
                      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>
                    </a>
                  )}
                  {post.author.socialLinks.github && (
                    <a href={post.author.socialLinks.github} target="_blank" rel="noopener noreferrer" class="text-purple-200/50 hover:text-fuchsia-400 transition-colors">
                      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z"/></svg>
                    </a>
                  )}
                  {post.author.socialLinks.linkedin && (
                    <a href={post.author.socialLinks.linkedin} target="_blank" rel="noopener noreferrer" class="text-purple-200/50 hover:text-fuchsia-400 transition-colors">
                      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 01-2.063-2.065 2.064 2.064 0 112.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
                    </a>
                  )}
                  {post.author.socialLinks.website && (
                    <a href={post.author.socialLinks.website} target="_blank" rel="noopener noreferrer" class="text-purple-200/50 hover:text-fuchsia-400 transition-colors">
                      <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"/></svg>
                    </a>
                  )}
                </div>
              )}
            </div>
          </div>
        </div>
      )}

      {/* Back to Blog */}
      <div class="max-w-3xl mx-auto mt-12 text-center">
        <a 
          href="/blog" 
          class="inline-flex items-center gap-2 text-purple-200/70 hover:text-fuchsia-400 transition-colors"
        >
          <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
          Back to all articles
        </a>
      </div>
    </Container>
  </article>
</BaseLayout>

<style>
  /* Article content styling */
  .article-content {
    color: rgba(233, 213, 255, 0.9);
    font-size: 1.125rem;
    line-height: 1.8;
  }
  
  .article-content h1 {
    color: white;
    font-size: 1.875rem;
    font-weight: 700;
    margin-top: 3rem;
    margin-bottom: 1.5rem;
  }
  
  .article-content h2 {
    color: white;
    font-size: 1.5rem;
    font-weight: 700;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
  }
  
  .article-content h3 {
    color: white;
    font-size: 1.25rem;
    font-weight: 600;
    margin-top: 2rem;
    margin-bottom: 0.75rem;
  }
  
  .article-content p {
    margin-bottom: 1.5rem;
  }
  
  .article-content a {
    color: #e879f9;
    text-decoration: none;
  }
  
  .article-content a:hover {
    text-decoration: underline;
  }
  
  .article-content strong {
    color: white;
  }
  
  .article-content code {
    color: #f0abfc;
    background: rgba(255, 255, 255, 0.1);
    padding: 0.125rem 0.375rem;
    border-radius: 0.25rem;
    font-size: 0.875em;
  }
  
  .article-content pre {
    background: #0f0f1a;
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 0.75rem;
    padding: 1.5rem;
    overflow-x: auto;
    margin-bottom: 1.5rem;
  }
  
  .article-content pre code {
    background: transparent;
    padding: 0;
  }
  
  .article-content blockquote {
    border-left: 4px solid #e879f9;
    padding-left: 1.5rem;
    font-style: italic;
    margin: 1.5rem 0;
    color: rgba(196, 181, 253, 0.8);
  }
  
  .article-content ul,
  .article-content ol {
    margin-bottom: 1.5rem;
    padding-left: 1.5rem;
  }
  
  .article-content li {
    margin-bottom: 0.5rem;
  }
  
  .article-content table {
    width: 100%;
    margin-bottom: 1.5rem;
    border-collapse: collapse;
  }
  
  .article-content th {
    color: white;
    background: rgba(255, 255, 255, 0.05);
    padding: 0.75rem 1rem;
    border: 1px solid rgba(255, 255, 255, 0.1);
    text-align: left;
  }
  
  .article-content td {
    padding: 0.75rem 1rem;
    border: 1px solid rgba(255, 255, 255, 0.1);
  }
  
  .article-content hr {
    border-color: rgba(255, 255, 255, 0.1);
    margin: 3rem 0;
  }
  
  .article-content img {
    border-radius: 0.75rem;
    margin: 1.5rem 0;
  }
</style>
