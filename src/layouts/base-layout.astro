---
import "@/styles/global.css";
import Header from "@/components/layout/header.astro";
import Footer from "@/components/layout/footer.astro";
import MetaTags from "@/components/seo/meta-tags.astro";
import Schema from "@/components/seo/schema.astro";
import { ClientRouter } from 'astro:transitions';

interface Props {
  title: string;
  description?: string;
  showNav?: boolean;
}

const { 
  title, 
  description = "TMNG - Precision Digital Solutions",
  showNav = true
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <MetaTags title={title} description={description} />
    <Schema />
    <!-- <ClientRouter /> -->
  </head>
  <body class="text-white selection:bg-fuchsia-500 selection:text-white flex flex-col min-h-screen font-sans">
    {showNav && <Header />}
    <main class:list={["grow", { "pt-20": showNav }]} transition:animate="fade">
      <slot />
    </main>
    {showNav && <Footer />}
  </body>
</html>
